{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "ES2016",
      "ES2017",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "typeRoots": ["../node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["./src/*.ts"],
  "exclude": ["node_modules"]
}